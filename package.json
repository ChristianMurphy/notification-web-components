{
    "private": true,
    "scripts": {
        "bootstrap": "lerna bootstrap --ci",
        "prebuild": "rm -rf \"**/node_modules\" && npm ci && lerna bootstrap --ci",
        "build": "lerna run build",
        "ci:commitlint": "commitlint-travis",
        "format": "npm-run-all -p format:*",
        "format:js": "prettier-eslint --write '**/*.{js,vue}'",
        "format:md": "prettier --write '**/*.md'",
        "format:html": "prettier --write '**/*.html'",
        "format:css": "prettier-stylelint --write '**/*.css'",
        "lint": "npm-run-all lint:*",
        "lint:js": "eslint --ext vue .",
        "lint:css": "stylelint '**/*.{css,scss,vue}'",
        "lint:md": "remark --frail '*.md' 'docs/**/*.md' '@uportal/*/*.md'",
        "start": "lerna run start",
        "test": "npm-run-all test:* lint:*",
        "test:packages": "lerna run test",
        "publish-webjar": "lerna-webjar"
    },
    "workspaces": [
        "@uportal/*"
    ],
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "eslintConfig": {
        "root": true,
        "parserOptions": {
            "parser": "babel-eslint"
        },
        "extends": [
            "react-app",
            "plugin:vue/strongly-recommended",
            "eslint:recommended",
            "google"
        ],
        "env": {
            "node": true,
            "browser": true,
            "es6": true
        },
        "rules": {
            "no-invalid-this": "off",
            "require-jsdoc": "off",
            "max-len": "off",
            "no-console": "warn",
            "vue/html-closing-bracket-newline": "warn"
        }
    },
    "prettier": {
        "singleQuote": true,
        "tabWidth": 4,
        "jsxBracketSameLine": true,
        "printWidth": 100
    },
    "gitHooks": {
        "commit-msg": "commitlint -e",
        "pre-commit": "lint-staged"
    },
    "lint-staged": {
        "*.{js,vue}": [
            "prettier-eslint --write",
            "git add"
        ],
        "*.css": [
            "prettier-stylelint --write",
            "git add"
        ],
        "*.scss": [
            "prettier --write --parser scss",
            "stylelint",
            "git add"
        ],
        "*.{html,md,json}": [
            "prettier --write",
            "git add"
        ]
    },
    "stylelint": {
        "processors": [
            "@mapbox/stylelint-processor-arbitrary-tags"
        ],
        "extends": "stylelint-config-standard",
        "rules": {
            "no-empty-source": null,
            "no-descending-specificity": null
        }
    },
    "remarkConfig": {
        "plugins": [
            "preset-lint-recommended",
            "validate-links",
            [
                "remark-lint-list-item-indent",
                false
            ]
        ]
    },
    "renovate": {
        "extends": [
            "config:base",
            ":rebaseStalePrs",
            ":preserveSemverRanges"
        ],
        "lockFileMaintenance": {
            "enabled": true
        }
    },
    "engines": {
        "node": "^10.0.0 || ^11.0.0",
        "npm": "^6.5.0"
    },
    "dependencies": {}
}
